{
	"tasks": {
		"run": "deno run --env-file --allow-net --allow-write --allow-env --allow-read --allow-ffi main.ts",
		"compile": "deno compile --env-file --allow-net --allow-write --allow-env --allow-read --allow-ffi --output co2.bin main.ts",
		"copy": "deno task compile && cp co2.bin ~/bin/dwmc-co2-monitor"
	},
	"imports": {
		"@influxdata/influxdb-client": "npm:@influxdata/influxdb-client@^1.35.0",
		"@std/assert": "jsr:@std/assert@1",
		"co2-monitor": "npm:co2-monitor@^3.0.0"
	},
	"fmt": {
		"lineWidth": 200,
		"singleQuote": true,
		"useTabs": true
	}
}
