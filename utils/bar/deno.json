{
	"tasks": {
		"dev": "deno run --allow-net --env-file --allow-write --unstable-kv --allow-read --allow-sys --allow-env --allow-run --watch main.ts --debug",
		"compile": "deno compile --allow-net --env-file --allow-write --unstable-kv --allow-read --allow-sys --allow-env --allow-run --output bar.bin main.ts",
		"copy": "deno task compile && cp bar.bin ~/bin/dwmc-bar"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@1"
	},
	"fmt": {
		"lineWidth": 200,
		"singleQuote": true,
		"useTabs": true
	}
}
